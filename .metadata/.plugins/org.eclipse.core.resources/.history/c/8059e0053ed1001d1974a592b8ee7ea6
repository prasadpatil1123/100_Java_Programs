package pg53;
import java.util.Calendar;
import java.util.GregorianCalendar;

public class GetCurrentDateAndTime {

	public static void main(String[] args) {

		int day, month, year;
		int hour, minute, second;
		GregorianCalendar data = new GregorianCalendar();

		day = data.get(Calendar.DAY_OF_MONTH);
		month = data.get(Calendar.MONTH);
		year = data.get(Calendar.YEAR);

		second = data.get(Calendar.DAY_OF_MONTH);
		minute = data.get(Calendar.DAY_OF_MONTH);
		hour = data.get(Calendar.DAY_OF_MONTH);

		System.out.println("Current date is " + day + " / " + month + " / " + year);
		System.out.println("Current time is " + hour + " : " + minute + " : " + second);

	}

}
